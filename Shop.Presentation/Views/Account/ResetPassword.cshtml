@model Shop.Data.ViewModels.Account.SetPasswordViewModel

@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="wrap-account-pic col-lg-6 col-md-6 hidden-sm hidden-xs" style="background-image: url(/images/site/Activate.png)"></div>

<div class="account-form col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <span class="account-form-title">
        تغییر کلمه عبور
    </span>

    @if (ViewBag.SuccessResetPassword != null && ViewBag.SuccessResetPassword)
    {
        <div class="alert alert-success text-center">
            <h5 class="text-center">
                <span>کلمه عبور با موفقیت تغییر کرد</span>
                <br />
                <span>برای دریافت کلمه عبور جدید، به ایمیل خود مراجعه کنید</span>
            </h5>
        </div>
    }
    else
    {
        <form action="/Account/ResetPassword?UserName=@ViewBag.UserName&Token=@ViewBag.Token" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="wrap-input-account">
                <input asp-for="Password" class="form-control" placeholder="کلمه عبور" />
                <span class="focus-account"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="wrap-input-account">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="تأیید کلمه عبور" />
                <span class="focus-account"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="container-button">
                <button type="submit" class="account-button">
                    ثبت
                </button>
            </div>
        </form>
    }
    <br />
    <a href="/Login" class="btn btn-block btn-xs btn-primary">ورود به حساب کاربری</a>
    <br />
    <a href="/" class="btn btn-block btn-xs btn-primary">بازگشت به صفحه اصلی</a>
</div>

