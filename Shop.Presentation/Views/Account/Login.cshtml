@model Shop.Data.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="wrap-account-pic col-lg-6 col-md-6 hidden-sm hidden-xs" style="background-image: url(/images/site/Login.png)"></div>

<div class="account-form col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <span class="account-form-title">
        فرم ورود
    </span>

    <form asp-action="Login" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="wrap-input-account">
            <input asp-for="Email" class="form-control" placeholder="ایمیل" />
            <span class="focus-account"></span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="wrap-input-account">
            <input asp-for="Password" class="form-control" placeholder="کلمه عبور" />
            <span class="focus-account"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="control-label form-check-label mr-3"></label>
            <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>

        <div class="container-button">
            <button type="submit" class="account-button">
                ورود
            </button>
        </div>
    </form>
    <br />
    <a href="/Account/ForgetPassword" class="btn btn-block btn-xs btn-primary">فراموشی کلمه عبور</a>
    <br />
    <a href="/Account/ResendEmail" class="btn btn-block btn-xs btn-primary">ارسال مجدد لینک فعالسازی</a>
    <br />
    <a href="/Register" class="btn btn-block btn-xs btn-primary">حساب کاربری ندارم</a>
    <br />
    <a href="/" class="btn btn-block btn-xs btn-primary">بازگشت به صفحه اصلی</a>
</div>
