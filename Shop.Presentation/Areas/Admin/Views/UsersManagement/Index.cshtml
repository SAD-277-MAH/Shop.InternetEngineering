@model IEnumerable<Shop.Data.ViewModels.Admin.UserDetailsViewModel>

@{
    ViewData["Title"] = "مدیریت کاربران";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-10 col-offset-1">
    <div>
        <h3>
            <span>مدیریت کاربران</span>
        </h3>
    </div>

    <div class="margin-top-30">
        <table class="table table-bordered table-hover" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>عملیات</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @if (item.RoleName == "کاربر")
                            {
                                <a href="#" onclick="ChangeRole('@item.UserName', 'Admin')" class="btn-sm btn-success">ارتقا مقام به مدیر</a>
                            }
                            else
                            {
                                <a href="#" onclick="ChangeRole('@item.UserName', 'User')" class="btn-sm btn-danger">تنزل مقام به کاربر</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="modalBox" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div id="modalBody" class="modal-body">

            </div>
        </div>
    </div>
</div>

@section script {
    <script>
        function ChangeRole(userName, roleName) {
            $.ajax({
                url: "/Admin/UsersManagement/ChangeRole?UserName=" + userName + "&RoleName=" + roleName,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#modalBox').modal('show');
                $('#modalBody').html(result);
            });
        }
    </script>
}