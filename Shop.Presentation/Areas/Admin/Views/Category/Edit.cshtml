@model Shop.Data.ViewModels.Admin.CategoryViewModel

@{
    Layout = null;
}

<h4 class="text-center">ویرایش دسته بندی "@Model.Name"</h4>
<hr />
<form action="/Admin/Category/Edit/@ViewContext.RouteData.Values["id"]" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger validation-error"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="نام دسته بندی" />
        <span asp-validation-for="Name" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Icon" class="control-label"></label>
        <input asp-for="Icon" class="form-control" placeholder="آیکون" />
        <span asp-validation-for="Icon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="اعمال تغییرات" class="btn btn-success btn-block" />
    </div>
</form>