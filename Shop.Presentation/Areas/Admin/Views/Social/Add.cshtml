@model Shop.Data.ViewModels.Admin.SocialViewModel

@{
    Layout = null;
}

<h4 class="text-center">ثبت شبکه اجتماعی جدید</h4>
<hr />
<form action="/Admin/Social/Add" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger validation-error"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="نام شبکه اجتماعی" />
        <span asp-validation-for="Name" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link" class="control-label"></label>
        <input asp-for="Link" class="form-control" placeholder="لینک" />
        <span asp-validation-for="Link" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Icon" class="control-label"></label>
        <input asp-for="Icon" class="form-control" placeholder="آیکون" />
        <span asp-validation-for="Icon" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" type="color" value="#000000" class="form-control" id="cp" placeholder="رنگ" />
        <span asp-validation-for="Color" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ثبت" class="btn btn-success btn-block" />
    </div>
</form>

