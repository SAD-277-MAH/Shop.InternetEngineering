@model Shop.Data.ViewModels.Admin.MessageSenderSettingViewModel

@{
    ViewData["Title"] = "تنظیمات ارسال پیام";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-4 col-md-4 col-sm-6 col-10">
    <h1 class="text-center">تنظیمات ارسال پیام</h1>

    <hr />
    <form action="/Admin/Setting/MessageSender" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger validation-error"></div>

        @if (ViewBag.ChangeSuccess != null && ViewBag.ChangeSuccess)
        {
            <div class="form-group">
                <div class="alert alert-success text-center">
                    <h4 class="text-center">
                        تغییرات با موفقیت اعمال شد
                    </h4>
                </div>
            </div>
        }

        <div class="form-group">
            <input asp-for="SmsApi" class="form-control" placeholder="SMS API" />
            <span asp-validation-for="SmsApi" class="text-danger validation-error"></span>
        </div>
        <div class="form-group">
            <input asp-for="SmsSender" class="form-control" placeholder="فرستنده SMS" />
            <span asp-validation-for="SmsSender" class="text-danger validation-error"></span>
        </div>
        <div class="form-group">
            <input asp-for="EmailAddress" class="form-control" placeholder="آدرس ایمیل" />
            <span asp-validation-for="EmailAddress" class="text-danger validation-error"></span>
        </div>
        <div class="form-group">
            <input asp-for="EmailPassword" class="form-control" placeholder="کلمه عبور ایمیل" />
            <span asp-validation-for="EmailPassword" class="text-danger validation-error"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="اعمال تغییرات" class="btn btn-success btn-block" />
        </div>
    </form>
</div>