@model IEnumerable<Shop.Data.Models.License>
@using System.Net

@{
    ViewData["Title"] = "مجوز ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-10 col-offset-1">
    <div>
        <h3>
            <span>مجوز ها</span>
        </h3>

        <h3 class="pull-left">
            <a href="/Admin/License/Add" class="btn btn-primary">جدید</a>
        </h3>
    </div>

    <div class="margin-top-30">
        <table class="table table-bordered table-hover" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>عملیات</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.Raw(@WebUtility.HtmlDecode(item.Content))
                            @*@Html.DisplayFor(modelItem => item.Content)*@
                        </td>
                        <td>
                            <a href="/Admin/License/Edit/@item.Id" class="btn-sm btn-warning">ویرایش</a> |
                            <a href="#" onclick="Delete(@item.Id)" class="btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="modalBox" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div id="modalBody" class="modal-body">

            </div>
        </div>
    </div>
</div>

@section script {
    <script>
        function Delete(id) {
            $.ajax({
                url: "/Admin/License/Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#modalBox').modal('show');
                $('#modalBody').html(result);
                $("form").removeData("validator");
                $("form").removeData("unobtrusiveValidation");
                $.validator.unobtrusive.parse($('form'));
            });
        }
    </script>
}