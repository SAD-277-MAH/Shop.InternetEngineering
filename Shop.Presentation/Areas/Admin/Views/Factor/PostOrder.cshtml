@model Shop.Data.ViewModels.Admin.PostOrderViewModel

@{
    Layout = null;
}

<h4 class="text-center">ارسال سفارش</h4>
<hr />
<form action="/Admin/Factor/PostOrder/@ViewContext.RouteData.Values["id"]" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger validation-error"></div>
    <div class="form-group">
        <label asp-for="PostTrackingCode" class="control-label"></label>
        <input asp-for="PostTrackingCode" class="form-control" placeholder="کد رهگیری پست" />
        <span asp-validation-for="PostTrackingCode" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ثبت" class="btn btn-success btn-block" />
    </div>
</form>